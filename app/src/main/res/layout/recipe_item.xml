<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/cardview_margin"
        android:layout_marginStart="@dimen/cardview_margin_start"
        android:layout_marginTop="@dimen/cardview_margin_top"

        app:cardElevation="0dp"


     >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cl_margin">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/image_layout_width"
                android:layout_height="@dimen/image_layout_height"
                android:layout_marginTop="@dimen/image_margin_top"
                app:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/authorTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView"/>
            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/text_size"
                card_view:layout_constraintTop_toBottomOf="@id/authorTxt"/>
            <TextView
                android:id="@+id/sourceLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link"
                android:autoLink="web"
                card_view:layout_constraintTop_toBottomOf="@+id/titleTxt"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>